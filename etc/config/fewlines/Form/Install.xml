<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<form>
	<install name="potatoe" action="{{baseurl('index/testform')}}" method="post" novalidate="true">
		<input type="text" placeholder="Vorname"  name="firstname" autocomplete="off">
			<validation>
				<options regex="/^[0-9]{1,}$/"
						 minlength="2"
						 maxlength="5"
						 blank="true"></options>
				<errors>
					<regex>Regular expression not matched</regex>
					<minlength>Minlength error</minlength>
					<maxlength>Maxlength error</maxlength>
				</errors>
			</validation>
		</input>

		<input type="email" name="testmail" placeholder="MAIL">
			<validation>
				<options blank="true" email="true"></options>
				<errors>
					<email>No correct mail given</email>
				</errors>
			</validation>
		</input>

		<input type="radio" value="hue1" name="hue"></input>
		<input type="radio" value="hue2" name="hue">
			<validation>
				<options blank="true" regex="/hue2/"></options>
				<errors>
					<regex>HUE 2 not set</regex>
					<blank>BLANK</blank>
				</errors>
			</validation>
		</input>

