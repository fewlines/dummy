<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<form>
	<install name="potatoe" action="{{baseurl('index/testform')}}" method="post">
		<input type="text" placeholder="Vorname"  name="firstname" autocomplete="off">
			<validation>
				<options regex="/^[0-9]{1,}$/"
						 minlength="2"
						 maxlength="5"
						 blank="true"
						 email="true"
						 zipcode="de"
						 date="true"></options>
				<errors>
					<regex>Regular expression not matched</regex>
					<minlength>Minlength madafaka</minlength>
					<maxlength>Maxlength bitch</maxlength>
					<blank>It's empty!</blank>
					<email>No correct mail given</email>
				</errors>
			</validation>
		</input>

		<input type="radio" value="hue1" name="hue"></input>
		<input type="radio" value="hue2" name="hue"></input>

		<input type="checkbox" value="test1" name="chktest[]"></input>
		<input type="checkbox" value="test2" name="chktest[]"></input>
		<input type="checkbox" value="test3" name="chktest[]"></input>

		<select name="type" hue="hue">
			<option value="opt1">Option1</option>
			<option value="opt2" selected="true">Option2</option>
			<option value="opt3">Option3</option>
			<option value="opt4">Option4</option>
		</select>

		<input type="submit" name="submit-install" value="Absenden"></input>

		<validation>
			<!-- Provisional options (not needed for global errors) -->
			<!-- <options regex="" minlength="" maxlength="" required="true"></options> -->
			<errors>
				<minlength>Global minlength error</minlength>
				<default>Global default error</default>
			</errors>
		</validation>
	</install>
</form>